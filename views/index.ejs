<!DOCTYPE html>
<html>
  <head>
    <!--LinkStyle-->
    <title>NetFlix</title>
    <link rel="stylesheet" type="text/css" href="https://csshake.surge.sh/csshake.min.css">
    <link rel="stylesheet" href="/stylesheets/bootstrap.min (1).css">
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body>
    <!--Body-->
    <!--NavBar-->    
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/"><img src="/images/netflix.png" alt="Netflix" class="shake-slow shake-constant shake-constant--hover"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      
        <div class="collapse navbar-collapse" id="navbarColor02">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <a class="nav-link" href="/accion">Acción</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/infantil">Infantil</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/terror">Terror</a>
            </li>
          </ul>
        </div>
      </nav>
<!--ButtonPage-->  
    <div class="container">
      <div style="text-align:center">
    <div class="btn-group mr-2" role="group" aria-label="Second group">
        <button type="button" class="btn btn-outline-danger"><a href="/1">1</a></button>
        <button type="button" class="btn btn-outline-danger"><a href="/2">2</a></button>
        <button type="button" class="btn btn-outline-danger"><a href="/3">3</a></button>
      </div>
    </div>
    <div class="container"> 
    <!--Main-->
      <% movies.map((movie) => { %>
      <main>
        <div class="div-imagen">
            <div class="datosPrincipal">
              <div class="titulo">
              <strong><%= movie.title %></strong><br>
              </div>  
                Puntuación: <%= movie.vote_average %><br>
                Estreno: <%= movie.release_date %><br>
                <% if (movie.adult === false) { %>
                Público: ATP
                <% } %><br>
                <% if (movie.original_language === 'en') { %>
                Lenguaje: Ingles 
                <% }  %> 
                <% if (movie.original_language === 'es'){ %>
                Lenguaje: Español    
                <% } %>
                <% if (movie.original_language === 'cn'){ %>
                Lenguaje: Chino    
                <% } %>
                <% if (movie.original_language === 'ja'){ %>
                Lenguaje: Japones    
                <% } %>
                <% if (movie.original_language === 'fr'){ %>
                Lenguaje: Frances    
                <% } %>
                <% if (movie.original_language === 'it'){ %>
                Lenguaje: Italiano    
                <% } %>
                <% if (movie.original_language === 'hi'){ %>
                Lenguaje: Hindi    
                <% } %>
                <% if (movie.original_language === 'ko'){ %>
                Lenguaje: Koreano    
                <% } %>
                <% if (movie.original_language === 'sv'){ %>
                Lenguaje: Sueco    
                <% } %>
                <% if (movie.original_language === 'ar'){ %>
                Lenguaje: Árabe    
                <% } %>
                <% if (movie.original_language === 'pl'){ %>
                Lenguaje: Polaco    
                <% } %>
                <% if (movie.original_language === 'bn'){ %>
                Lenguaje: Bengalí    
                <% } %>
                <% if (movie.original_language === 'id'){ %>
                Lenguaje: Indonesio    
                <% } %>
                <% if (movie.original_language === 'no'){ %>
                Lenguaje: Noruego bokmål     
                <% } %>     
                <% if (movie.original_language === 'ml'){ %>
                Lenguaje: Malayalam    
                <% } %>
                <% if (movie.original_language === 'cs'){ %>
                Lenguaje: Checo    
                <% } %>
                <% if (movie.original_language === 'pt'){ %>
                Lenguaje: Portugués    
                <% } %>
                <% if (movie.original_language === 'tl'){ %>
                Lenguaje: Tagalo    
                <% } %>         
                
            </div>
            <img class="desvanecer" src="http://image.tmdb.org/t/p/w185<%= movie.poster_path %>" alt="">
        </div>
      </main>
      <% }) %>
    </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>
